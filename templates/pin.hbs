<svg xmlns="http://www.w3.org/2000/svg" width="{{ value.width }}" height="{{ value.height }}" viewBox="0 0 {{ value.width }} {{ value.height }}" fill="none" role="img" aria-labelledby="desc">
  {{#if owner}}user
  <title>{{ gist.user }}/{{ gist.filename }} Gist Pin</title>
  {{else}}
  <title>{{ gist.filename }} Gist Pin</title>
  {{/if}}
  <desc id="desc">{{ gist.description }}</desc>
  <style>
    .header {
      font: 600 18px "Segoe UI", Ubuntu, Sans-Serif;
      fill: {{ theme.primary_color }}
    }

    @supports(-moz-appearance: auto) {
      /* Selector detects Firefox */
      .header {
        font-size: 15.5px
      }
    }

    .description {
      font: 400 13px "Segoe UI", Ubuntu, Sans-Serif
    }

    .text-color {
      fill: {{ theme.text_color }}
    }

    .lang-color {
      fill: {{ gist.lang_color }}
    }

    .text-small {
      font: 400 12px "Segoe UI", Ubuntu, Sans-Serif
    }

    .icon {
      fill: {{ theme.icon_color }}
    }

    .fade {
      animation: fade 0.5s ease-in-out forwards
    }
  </style>
  <rect x="0.5" y="0.5" rx="4.5" height="99%" width="{{subtract value.width 1}}" fill="{{ theme.bg_color }}" stroke="{{ theme.border_color }}"  stroke-opacity="1"/>
  <g transform="translate(25, 35)">
    <g transform="translate(0, 0)">
      <svg class="icon" x="0" y="-13" viewBox="0 0 16 16" version="1.1" width="16" height="16">
        <path fill-rule="evenodd" d="M1.75 1.5a.25.25 0 00-.25.25v12.5c0 .138.112.25.25.25h12.5a.25.25 0 00.25-.25V1.75a.25.25 0 00-.25-.25H1.75zM0 1.75C0 .784.784 0 1.75 0h12.5C15.216 0 16 .784 16 1.75v12.5A1.75 1.75 0 0114.25 16H1.75A1.75 1.75 0 010 14.25V1.75zm9.22 3.72a.75.75 0 000 1.06L10.69 8 9.22 9.47a.75.75 0 101.06 1.06l2-2a.75.75 0 000-1.06l-2-2a.75.75 0 00-1.06 0zM6.78 6.53a.75.75 0 00-1.06-1.06l-2 2a.75.75 0 000 1.06l2 2a.75.75 0 101.06-1.06L5.31 8l1.47-1.47z"></path>
      </svg>
    </g>
    <g transform="translate(25, 0)">
      {{#if value.owner}}
      <text x="0" y="0" class="header">{{ gist.user }}/{{ gist.filename }}</text>
      {{else}}
      <text x="0" y="0" class="header">{{ gist.filename }}</text>
      {{/if}}
    </g>
  </g>
  <g transform="translate(0, 55)">
    <text class="description text-color" x="25" y="-5">
      <tspan dy="1.2em" x="25">{{{ gist.broken_description }}}</tspan>
    </text>
    <g transform="translate(30, {{ value.y_stats }})">
      <g transform="translate(0, 0)">
        <g>
          <circle class="lang-color" cx="0" cy="-5" r="6"/>
          <text class="text-small text-color" x="15">{{ gist.language }}</text>
        </g>
      </g>
      <g transform="translate(80.93125, 0)">
        <g transform="translate(0, 0)">
          <svg class="icon" y="-12" viewBox="0 0 16 16" version="1.1" width="16" height="16">
            <path fill-rule="evenodd" d="M8 .25a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L8 12.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L.818 6.374a.75.75 0 01.416-1.28l4.21-.611L7.327.668A.75.75 0 018 .25zm0 2.445L6.615 5.5a.75.75 0 01-.564.41l-3.097.45 2.24 2.184a.75.75 0 01.216.664l-.528 3.084 2.769-1.456a.75.75 0 01.698 0l2.77 1.456-.53-3.084a.75.75 0 01.216-.664l2.24-2.183-3.096-.45a.75.75 0 01-.564-.41L8 2.694v.001z" />
          </svg>
        </g>
        <g transform="translate(20, 0)">
          <text class="text-small text-color">{{ gist.stars }}</text>
        </g>
      </g>
      <g transform="translate(151.21875, 0)">
        <g transform="translate(0, 0)">
          <svg class="icon" y="-12" viewBox="0 0 16 16" version="1.1" width="16" height="16">
            <path fill-rule="evenodd" d="M5 3.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm0 2.122a2.25 2.25 0 10-1.5 0v.878A2.25 2.25 0 005.75 8.5h1.5v2.128a2.251 2.251 0 101.5 0V8.5h1.5a2.25 2.25 0 002.25-2.25v-.878a2.25 2.25 0 10-1.5 0v.878a.75.75 0 01-.75.75h-4.5A.75.75 0 015 6.25v-.878zm3.75 7.378a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm3-8.75a.75.75 0 100-1.5.75.75 0 000 1.5z"></path>
          </svg>
        </g>
        <g transform="translate(20, 0)">
          <text class="text-small text-color">{{ gist.forks }}</text>
        </g>
      </g>
    </g>
  </g>
</svg>
